<div class="row">
  <div class="large-12 columns clearfix">
    <label class="left">{{model.title}} </label>
  </div>
</div>

<div class="row">
  {{#if model.questions.length}}
  {{#each question in model.questions}}  
  {{#if question.visible }}
  <p> Question {{question.id}}: {{question.title}} </p>
  {{#if question.answers.length}}

    {{show-answers action="answerSelector" answers=question.answers}}    

  {{/if}}
  {{/if}}
  {{/each}}
  {{/if}}
</div>
